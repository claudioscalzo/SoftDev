for d in $(find . -type d -not -name "."); do
    if [ -d "$d" ]; then
        if [ $(find $d -type f -atime +30 | wc -l) -eq 0 ]; then
            orig=$(pwd)
            cd $d
            cd ..
            name=$(basename $d)
            tar -zcf $name.tgz $name
            rm -Rf $name
            cd $orig
        fi
    fi
done
